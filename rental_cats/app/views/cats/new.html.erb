<form action="<%= cats_url %>" method="post">
    <label for="name">Name:
        <input type="text" name="cats_params[:name]" id="name">
    </label><br>

    <label >Sex:
        <label for="male">M</label>
        <input type="radio" id="male" name="cats_params[:sex]" value="M">
        <label for="female">F</label>
        <input type="radio" id="female" name="cats_params[:sex]" value="F">
    </label><br>
   

   <label for="color">Choose a color:</label>
    <select id="color" name="cats_params[:color]">
        <option value="">-- select a color --</option>
        <option value="black">Black</option>
        <option value="white">White</option>
        <option value="brown">Brown</option>
        <option value="orange">Orange</option>
    </select><br>


    <label for="birth_date">Birth Date:</label>
    <input type="date" id="birth_date" name="cats_params[:birth_date]"><br>

    <label for="description">Description:</label>
    <textarea id="description" name="cats_params[:description]" rows="4" cols="50">
    
    </textarea><br>

    <input type="submit" value='create Cat'>
</form>